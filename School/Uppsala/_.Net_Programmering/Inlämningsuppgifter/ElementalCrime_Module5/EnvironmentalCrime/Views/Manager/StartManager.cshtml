@{
    Layout = "_ManagerLayout";
}

@model IEnvironmentalCrime

<h2>Ärenden</h2>
<p class="info">Du är inloggad som avdelningschef @ViewBag.ManID</p>

<table id="managerForm">
    <tr>
        <td class="label">Välj status:</td>
        <td class="label">Välj handläggare:</td>
        <td>&nbsp;</td>
        <td class="label">Ärendenummer:</td>
        <td>&nbsp;</td>
    </tr>
    <tr>
        <td>
            <select name="status">
                @foreach (ErrandStatus errandStatus in Model.ErrandStatuses)
                {
                    <option value="@errandStatus.StatusId">@errandStatus.StatusName</option>
                }
            </select>
        </td>
        <td>
            <select name="investigator">
                <option selected="selected">Välj alla</option>
                @foreach (Employee employee in Model.Employees)
                {
                    <option value="@employee.EmployeeId">@employee.EmployeeName</option>
                }
            </select>
        </td>
        <td><input class="button" type="submit" value="Hämta lista" /></td>
        <td><input name="casenumber" /></td>
        <td><input class="button" type="submit" value="Sök" /></td>
    </tr>
</table>

<!--Nedan ser man en lista på ärenden-->
<table>
    <tr>
        <th>Ärende anmält</th>
        <th>Ärendenummer</th>
        <th>Miljöbrott</th>
        <th>Status</th>
        <th>Avdelning</th>
        <th>Handläggare</th>
        <th>Uppladdade filer</th>
    </tr>
    @foreach (MyErrand errand in ViewBag.ListOfMyErrands)
    {
        <tr>
            <td>@errand.DateOfObservation.ToShortDateString()</td>
            <td><a asp-controller="Manager" asp-action="CrimeManager" asp-route-id="@errand.ErrandId">@errand.RefNumber</a></td>
            <td>@errand.TypeOfCrime</td>
            <td>@errand.StatusName</td>
            <td>@errand.DepartmentName</td>
            <td>@errand.EmployeeName</td>
            <td>
                @foreach (Picture picture in Model.Pictures)
                {
                    @if (picture.ErrandId == errand.ErrandId)
                    {
                        <p><a href="~/Pictures/@picture.PictureName">picture_@picture.PictureId</a></p>
                    }
                }
                @foreach (Sample sample in Model.Samples)
                {
                    @if (sample.ErrandId == errand.ErrandId)
                    {
                        <p><a href="~/Samples/@sample.SampleName">sample_@sample.SampleId</a></p>
                    }
                }
            </td>
        </tr>
    }
</table>
